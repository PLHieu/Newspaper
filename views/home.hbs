{{#section 'title'}}
    <title>Home</title>
{{/section}}
{{#section 'css'}}
    
    <link rel="stylesheet" href="../../public/css/csscuahieu.css">  
{{/section}}

{{#section 'js'}}
   
{{/section}}

{{#section 'preload'}}
<div id="preloader-active">
    <div class="preloader d-flex align-items-center justify-content-center">
        <div class="preloader-inner position-relative">
            <div class="preloader-circle"></div>
            <div class="preloader-img pere-text">
                <img src="../public/image/logo/logo.png" alt="">
            </div>
        </div>
    </div>
</div>
{{/section}}
<main>
    <!-- Trending Area Start {{ this.top3HighLightPost}} -->
    {{#if this.top3HighLightPost.2.ID}}
    <div class="trending-area fix pt-25 gray-bg">
        <div class="container">
            <div class="trending-main">
                <div class="row">
                    <div class="col-lg-8">
                        <!-- Trending Top -->
                        <div class="slider-active">
                            <!-- Single -->
                            <div class="single-slider">
                                <div class="trending-top mb-30">
                                    <div class="trend-top-img">
                                        <img src="../public/image/posts/{{this.top3HighLightPost.0.ID}}/smallavt.jpg" alt="" class="img-fluid">
                                        <div class="trend-top-cap">
                                            <a href="/post/category/{{this.top3HighLightPost.0.ID}}">
                                            <span class="bgr" data-animation="fadeInUp" data-delay=".2s" data-duration="1000ms">{{this.top3HighLightPost.0.CateName}}</span></a>
                                            <h2><a href="/read/{{this.top3HighLightPost.0.ID}}" data-animation="fadeInUp" data-delay=".4s" data-duration="1000ms">{{this.top3HighLightPost.0.Title}}</a></h2>
                                            <p data-animation="fadeInUp" data-delay=".6s" data-duration="1000ms">{{this.top3HighLightPost.0.PubTime}}</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                        </div>
                    </div>
                    <!-- Right content -->
                    <div class="col-lg-4">
                            <!-- Trending Top -->
                        
                        <div class="row">
                            <div class="col-lg-12 col-md-6 col-sm-6">
                                <div class="trending-top mb-30">
                                    <div class="trend-top-img">
                                        <img src="../public/image/posts/{{this.top3HighLightPost.1.ID}}/smallavt.jpg" alt="" class="img-fluid">
                                        <div class="trend-top-cap trend-top-cap2">
                                            <a href="/post/category/{{this.top3HighLightPost.1.ID}}">
                                                <span class="bgb">{{this.top3HighLightPost.1.CateName}}</span>
                                            </a>
                                            <h2><a href="/read/{{this.top3HighLightPost.1.ID}}">{{this.top3HighLightPost.1.Title}}</a></h2>
                                            <p>{{this.top3HighLightPost.1.PubTime}}</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-12 col-md-6 col-sm-6">
                                <div class="trending-top mb-30">
                                    <div class="trend-top-img">
                                        <img src="../public/image/posts/{{this.top3HighLightPost.2.ID}}/smallavt.jpg" alt="" class="img-fluid">
                                        <div class="trend-top-cap trend-top-cap2">
                                            <a href="/post/category/{{this.top3HighLightPost.2.ID}}">
                                                <span class="bgb">{{this.top3HighLightPost.2.CateName}}</span>
                                            </a>
                                            <h2><a href="/read/{{this.top3HighLightPost.2.ID}}">{{this.top3HighLightPost.2.Title}}</a></h2>
                                            <p>{{this.top3HighLightPost.2.PubTime}}</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{/if}}
    <!-- About US Start -->
    <div class="about-area2 gray-bg pt-60 pb-60">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="whats-news-wrapper">
                        <!-- Heading & Nav Button -->
                        <div class="row justify-content-between align-items-end mb-15">
                            <div class="col-xl-12">
                                <div class="section-tittle mb-30 ml-15">
                                    <h3 style="color: rgb(233, 67, 94);">Bài viết mới nhất</h3>
                                </div>
                            </div>
                            
                        </div>
                        <!-- Tab content -->
                        <div class="row">
                            <div class="col-12">
                                <!-- Nav Card -->
                                <div class="tab-content" id="nav-tabContent">
                                    <!-- card one -->
                                    <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">       
                                        <div class="row">
                                            <!-- Left Details Caption -->
                                            {{#each this.top10PostNew}}
                                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-10 mb-5">
                                                    <div class="whats-right-single mb-0">
                                                        <div class="row">
                                                            <div class="whats-right-img col-xl-6">
                                                                <img src="../public/image/posts/{{ID}}/smallavt.jpg" alt="" class="img-fluid">
                                                            </div>
                                                            <div class="whats-right-cap col-xl-6 mb-0">
                                                                <h4 class = "mb-0"><a href="/read/{{ID}}">{{Title}}
                                                                </a></h4>
                                                                <span class="mb-2 mr-2">{{PubTime}}</span> 
                                                                <span><a href="/post/category/{{CateID}}"
                                                                        class="badge badge-danger">{{CateName}}</a></span>
                                                                <p class="mb-30 ml-0 mr-2">{{Abstract}}</p> 
                                                            </div>
                                                        </div>
                                                    </div>
                                                    
                                                </div>
                                            {{/each}}   
                                        </div>
                                    </div>
                                    
                                </div>
                            </div>
                        </div>
                    </div>


                </div>
                
            </div>
        </div>
    </div>
    <div class="weekly2-news-area pt-0 pb-60 gray-bg">
        <div class="container">
            <div class="weekly2-wrapper">
                <div class="row">
                    
                    <div class="col-lg-12">
                        <div class="slider-wrapper">
                            <!-- section Tittle -->
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="small-tittle mb-30">
                                        <h3 > <b style="color: rgb(240, 56, 86);">Các chuyên mục</b></h3>
                                    </div>
                                </div>
                            </div>
                            <!-- Slider -->
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="weekly2-news-active d-flex">
                                        <!-- Single -->
                                        {{#each this.listCate1Post}}
                                            <div class="weekly2-single">
                                                <div class="weekly2-img">
                                                    <img src="../public/image/posts/{{this.post.0.ID}}/smallavt.jpg" alt="">
                                                </div>
                                                <div class="weekly2-caption">
                                                    <h4><a href="/read/{{this.post.0.ID}}">{{this.post.0.Title}} </a></h4>
                                                    <p>
                                                        <span class="mb-2 mr-2">{{this.post.PubTime}}</span> 

                                                        <span><a href="/post/category/{{ID}}"
                                                        class="badge badge-danger">Category: {{Name}}</a></span>

                                                    </p>
                                                    
                                                </div>
                                            </div>
                                        {{/each}}
                                        
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="weekly2-news-area pt-0 pb-60 gray-bg">
        <div class="container">
            <div class="weekly2-wrapper">
                <div class="row">
                    
                    <div class="col-lg-12">
                        <div class="slider-wrapper">
                            <!-- section Tittle -->
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="small-tittle mb-30">
                                        <h3 > <b style="color: rgb(240, 56, 86);">Bài viết phổ biến</b></h3>
                                    </div>
                                </div>
                            </div>
                            <!-- Slider -->
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="weekly2-news-active d-flex">
                                        <!-- Single -->
                                        {{#each this.top10PostMostRead}}
                                            <div class="weekly2-single">
                                                <div class="weekly2-img">
                                                    <img src="../public/image/posts/{{ID}}/smallavt.jpg" alt="" class="img-fluid">
                                                </div>
                                                <div class="weekly2-caption">
                                                    <h4><a href="/read/{{ID}}">{{Title}}</a></h4>
                                                    <p>
                                                        <span class="mb-2 mr-2">{{PubTime}}</span>
                                                    
                                                        <span><a href="/post/category/{{CateID}}"
                                                            class="badge badge-danger">{{CateName}}</a></span>
                                                    </p>
                                                    <p>{{Abstract}}</p>
                                                </div>
                                            </div>
                                        {{/each}}
                                        
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
</main>    
