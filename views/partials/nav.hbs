        $('.authen').click(function(e) {
            e.preventDefault();
            const retURL = window.location.href
            const redirectURL = this.id
            console.log(retURL)
            console.log(redirectURL)
            $.post('http://localhost:3000/saveRetURL',{retURL},function (data){
                window.location.href = 'http://localhost:3000/'+ redirectURL;
            })
        });
    });
