{{#section 'css'}}

{{/section}}

{{#section 'js'}}

{{/section}}


<!-- Preloader Start -->
{{#section 'preload'}}
<div id="preloader-active">
    <div class="preloader d-flex align-items-center justify-content-center">
        <div class="preloader-inner position-relative">
            <div class="preloader-circle"></div>
            <div class="preloader-img pere-text">
                {{!-- <img src="assets/img/logo/logo.png" alt=""> --}}
            </div>
        </div>
    </div>
</div>
{{/section}}

<main>
    <!-- About US Start -->
    <div class="about-area2 gray-bg pt-60 pb-60">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <div class="whats-news-wrapper">
                        <!-- Heading & Nav Button -->
                        <div class="row justify-content-between align-items-end mb-15">
                            <div class="col-xl-4">
                                <div class="section-tittle mb-30 ml-15">
                                    <h3>{{this.tagname}}</h3>
                                </div>
                            </div>
                            <div class="col-xl-8 col-md-9">
                            </div>
                        </div>
                        <!-- Tab content -->
                        <div class="row">
                            <div class="col-12">
                                <!-- Nav Card -->
                                <div class="tab-content" id="nav-tabContent">
                                    <!-- card one -->
                                    <div class="tab-pane fade show active" id="nav-home" role="tabpanel"
                                        aria-labelledby="nav-home-tab">


                                        {{#each this.posts}}

                                        <div class="row hangdanhmuc pb-20 mb-20">
                                            <div class="col-xl-8 col-lg-8 col-md-12">
                                                <div class="whats-news-single">
                                                    <div class="whates-caption whates-caption2">
                                                        <h4><a href="/read/{{ID}}">{{TieuDe}}</a></h4>
                                                        <span class="mb-2">{{info this}}</span>
                                                        <p>{{TomTat}}</p>
                                                    </div>
                                                    <div>
                                                        {{#each this.tags}}
                                                        <span><a href="/post/tag/{{TagID}}"
                                                                class="badge badge-danger">{{Name}}</a></span>
                                                        {{/each}}

                                                    </div>
                                                </div>

                                            </div>
                                            <div class="col-xl-4 col-lg-4 col-md-12">
                                                <div class="anhdanhmuc">
                                                    <img src="" alt="">
                                                </div>
                                            </div>
                                        </div>

                                        {{/each}}


                                    </div>
                                    <!-- Card two -->
                                    <div class="tab-pane fade" id="nav-profile" role="tabpanel"
                                        aria-labelledby="nav-profile-tab">

                                    </div>
                                </div>
                                <!-- End Nav Card -->
                            </div>
                        </div>
                    </div>

                    <!--Start pagination -->
                    <div class="pagination-area mt-4 gray-bg pb-45">
                        <div class="container">
                            <div class="row">
                                <div class="col-xl-12">
                                    <div class="single-wrap">
                                        <nav aria-label="Page navigation example">
                                            <ul class="pagination justify-content-start">
                                                {{#each this.page_numbers}}
                                                {{#if isCurrent}}
                                                <li class="page-item active"><a class="page-link"
                                                        href="?page={{value}}">{{value}}</a>
                                                </li>
                                                {{else}}
                                                <li class="page-item "><a class="page-link"
                                                        href="?page={{value}}">{{value}}</a>
                                                </li>
                                                {{/if}}
                                                {{/each}}
                                            </ul>
                                        </nav>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- End pagination  -->
                </div>


                <div class="col-lg-4">
                     <div class="w-100 tieude-right-sidebar">
                        Nổi bật trong <span class="badge badge-danger">{{tagname}}</span>
                    </div>

                    {{#each this.hightlightPosts}}
                    <a href = "/read/{{ID}}" class="w-100 d-flex mt-2 news-right-sidebar" style="border-radius: 10px">
                        <div class="w-75 d-inline-block p-3" style="font-size: medium;">{{Title}}</div>
                        <img src="{{imgurl}}" class="d-inline-block w-25 p-1"
                            style="border-radius: 10px;" alt="">
                    </a>
                    {{/each}}

                </div>
            </div>
        </div>
    </div>
    <!-- About US End -->

</main>