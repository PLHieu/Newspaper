{{#section 'title'}}
    <title>{{this.post.Title}}</title>
{{/section}}

{{#section 'css'}}
     
{{/section}}

{{#section 'js'}}

{{/section}}
<main>
    {{#section 'preload'}}
    <div id="preloader-active">
        <div class="preloader d-flex align-items-center justify-content-center">
            <div class="preloader-inner position-relative">
                <div class="preloader-circle"></div>
                <div class="preloader-img pere-text">
                    <img src="assets/img/logo/logo.png" alt="">
                </div>
            </div>
        </div>
    </div>
    {{/section}}
    <section class="blog_area single-post-area section-padding">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 posts-list">
                    <div class="single-post">
                        <div class="feature-img">
                            <img class="img-fluid rounded" src="../../public/image/posts/{{this.post.ID}}/bigavt.jpg" alt="">
                        </div>
                        <div class="blog_details">
                            <h1>{{this.post.Title}}</h1>
                            <ul class="blog-info-link mt-3 mb-4">
                                <li><a href="http://localhost:3000/post/category/{{this.post.CatID}}"><i class="fa fa-flag"></i>{{this.post.CatName}}</a></li>
                                <li><a href="#comments"><i class="fa fa-comments"></i>{{this.post.num_comments}} Comments</a></li>
                            </ul>
                            <p>{{{this.post.Content}}}</p>
                        </div>
                    </div>
                    <p class="font-italic"><i class="fa fa-tags"></i> Tags: 
                        {{#each this.post.tags}}
                            <a href="http://localhost:3000/post/tag/{{ID}}" class="text-info">#{{Name}}</a> 
                        {{/each}}
                    </p>
                    <div id="writer_post" class="row">
                        <img src="../../public/image/users/writers/{{this.post.WriterID}}/ava.jpg" class="rounded-circle col-1" id="writer_ava">
                        <div id="writer_info" class="col-9">
                            <h5>{{this.post.Writer.Name}}</h5>
                            <p class="font-italic">{{this.post.PubTime}}</p>
                        </div>
                        <h6 class="col-2 font-weight-light float-right text-right">{{this.post.Views}} views</h6>
                    </div>
                    <div class="content-item section" id="comments">
                        <form action="" method="post">
                            <h3 class="pull-left text-large">Your Comment</h3>
                            <button type="submit" class="btn btn-info pull-right">Submit</button>
                            <fieldset>
                                <div class="row">
                                    <div class="col-sm-3 col-md-2 hidden-xs">
                                        <img class="img-responsive w-100 rounded-circle" src="https://bootdey.com/img/Content/avatar/avatar1.png" alt="">
                                    </div>
                                    <div class="form-group col-xs-12 col-sm-9 col-md-10">
                                        <textarea class="form-control" id="message" name="comment" placeholder="Your message"></textarea>
                                    </div>
                                </div>  	
                            </fieldset>
                        </form>
                        <h3 class ="text-dark font-weight-bold">{{this.post.num_comments}} Comments</h3>
                        {{#each this.post.comments}}
                        <!-- COMMENT-START -->
                        <div class="media comments-area">
                            <a class="thumb pull-left" href="#"><img class="media-object rounded-circle" src="../../public/image/users/readers/1.jpg" alt=""></a>
                            <div class="media-body">
                                <div class="d-flex justify-content-between">
                                    <h4 class="media-heading">{{ReaderName}}</h4>
                                    <a href="/read/{{PostID}}/del-comment?id={{ID}}" class="text-danger"><i class="fa fa-trash" aria-hidden="true"></i></a>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <p>{{Content}}</p>
                                    <a href="#" onclick="return editContent();"  class="text-primary">
                                        <i class="fa fa-pencil" aria-hidden="true"></i>
                                    </a>
                                </div>

                                <ul class="list-unstyled list-inline media-detail pull-left">
                                    <li><i class="fa fa-calendar"></i>{{PubTime}}</li>
                                    <li><i class="fa fa-thumbs-up"></i>0</li>
                                </ul>
                                <ul class="list-unstyled list-inline media-detail pull-right">
                                    <li class=""><a href="#">Like</a></li>
                                    <li class=""><a href="#">Reply</a></li>
                                </ul>
                            </div>
                        </div>
                        <!-- COMMENT-END -->
                        {{/each}}
                        <p class="more text-right"><a href="#">Read more &raquo;</a></p>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="blog_right_sidebar">
                        <aside class="single_sidebar_widget popular_post_widget">
                            <h3 class="widget_title">Relative Post</h3>
                            {{#if this.post.five_post_like_cat}}
                                {{#each this.post.five_post_like_cat}}
                                    <article class="blog_item">
                                        <div class="blog_item_img">
                                            <img class="card-img rounded" src="../public/image/posts/{{ID}}/smallavt.jpg" alt="">
                                        </div>
                                        <div class="blog_details">
                                            <a class="d-inline-block" href="http://localhost:3000/read/{{ID}}">
                                                <h2>{{Title}}</h2>
                                            </a>
                                            <small class="font-italic">by {{Writer.Name}} - {{PubTime}}</small>
                                            <p>{{Abstract}}</p>
                                            <ul class="blog-info-link">
                                                <li class="font-italic">
                                                    <i class="fa fa-tags">
                                                    </i>
                                                    
                                                        Tags:
                                                        {{#each tags}}
                                                        <a href="http://localhost:3000/tag/{{ID}}" class="text-dark h6 font-italic">#{{Name}} </a>
                                                        {{/each}}
                                                </li>
                                            </ul>
                                        </div>
                                    </article>
                                {{/each}}
                            {{else}}
                                <p>None post is in like category</p>
                            {{/if}}
                        </aside>
                        <aside class="single_sidebar_widget tag_cloud_widget">
                            <h4 class="widget_title">Tag Clouds</h4>
                            <ul class="list">
                                <li>
                                    <a href="#">project</a>
                                </li>
                                <li>
                                    <a href="#">love</a>
                                </li>
                            </ul>
                        </aside>
                        <aside class="single_sidebar_widget instagram_feeds">
                            <h4 class="widget_title">Instagram Feeds</h4>
                            <ul class="instagram_row flex-wrap">
                                <li>
                                    <a href="#">
                                        <img class="img-fluid" src="assets/img/post/post_5.png" alt="">
                                    </a>
                                    <a href="#">
                                        <img class="img-fluid" src="assets/img/post/post_6.png" alt="">
                                    </a>
                                </li>
                            </ul>
                        </aside>
                        <aside class="single_sidebar_widget newsletter_widget">
                            <h4 class="widget_title">Newsletter</h4>
                            <form action="#">
                                <div class="form-group">
                                    <input type="email" class="form-control" onfocus="this.placeholder = ''"
                                    onblur="this.placeholder = 'Enter email'" placeholder='Enter email' required>
                                </div>
                                <button class="button rounded-0 primary-bg text-white w-100 btn_1 boxed-btn"
                                    type="submit">Subscribe</button>
                            </form>
                        </aside>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
