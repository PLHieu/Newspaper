{{> header-top}}

<main>
    <div class="about-area2 gray-bg pt-60 pb-60">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <div class="whats-news-wrapper">
                        {{!-- phan tieu de category --}}
                        <div class="row justify-content-between align-items-end mb-15 danhsachCate">
                            {{!-- Ten category cha --}}
                            <div class="col-xl-4">
                                <div class="section-tittle mb-30 ml-15">
                                    <h3><a {{#if this.isDad}} class="selected" {{else}} {{/if}}
                                            href="/post/category/{{this.Dad.ID}}">{{this.Dad.Name}}</a></h3>
                                </div>
                            </div>
                            {{!-- Ten cac category con --}}
                            <div class="col-xl-8 col-md-9">
                                <div class="properties__button">
                                    <nav>
                                        <div class="nav nav-tabs" id="nav-tab" role="tablist">
                                            {{#each this.Children}}
                                            <a class="nav-item nav-link {{#if this.selected}}selected{{else}} {{/if}}"
                                                href="/post/category/{{ID}}" role="tab"
                                                aria-selected="true">{{Name}}</a>
                                            {{/each}}
                                        </div>
                                    </nav>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <div class="tab-content" id="nav-tabContent">
                                    <div class="tab-pane fade show active" id="nav-home" role="tabpanel"
                                        aria-labelledby="nav-home-tab">
                                        {{#each this.posts}}
                                        <div class="row hangdanhmuc pb-20 mb-20">
                                            <!-- Phan thong tin ben trai-->
                                            <div class="col-xl-8 col-lg-8 col-md-12">
                                                <div class="whats-news-single">
                                                    <div class="whates-caption whates-caption2">
                                                        <h4><a class="" href="/read/{{ID}}">{{TieuDe}}</a></h4>
                                                        <span class="d-inline-block mb-2">{{info this}}</span>
                                                        {{#if Premium}}
                                                        <span class="d-inline-block badge badge-warning">Premium</span>
                                                        {{/if}}
                                                        <p>{{TomTat}}</p>
                                                    </div>
                                                    <div>
                                                        {{#each this.tags}}
                                                        <span><a href="/post/tag/{{TagID}}"
                                                                class="badge badge-danger">{{Name}}</a></span>
                                                        {{/each}}
                                                    </div>
                                                </div>

                                            </div>
                                            <!-- Phan Anh ben phai-->
                                            <div class="col-xl-4 col-lg-4 col-md-12">
                                                <div class="anhdanhmuc">
                                                    <img src="/public/image/posts/{{ID}}/smallavt.jpg" alt="">
                                                </div>
                                            </div>
                                        </div>

                                        {{/each}}

                                    </div>
                                    <div class="tab-pane fade" id="nav-profile" role="tabpanel"
                                        aria-labelledby="nav-profile-tab">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!--Start pagination -->
                    <div class="pagination-area mt-4 gray-bg pb-45">
                        <div class="container">
                            <div class="row">
                                <div class="col-xl-12">
                                    <div class="single-wrap">
                                        <nav aria-label="Page navigation example">
                                            <ul class="pagination justify-content-start">

                                                {{#each this.page_numbers}}
                                                {{#if isCurrent}}
                                                <li class="page-item active"><a class="page-link"
                                                        href="?page={{value}}">{{value}}</a>
                                                </li>
                                                {{else}}
                                                <li class="page-item "><a class="page-link"
                                                        href="?page={{value}}">{{value}}</a>
                                                </li>
                                                {{/if}}
                                                {{/each}}

                                            </ul>
                                        </nav>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- End pagination  -->

                </div>

                {{!-- cac bai viet noi bat --}}
                <div class="col-lg-4">
                    <div class="w-100 tieude-right-sidebar">
                        <h2>Nổi bật trong <span class="badge badge-danger">{{currentCate.Name}}</span></h2>
                    </div>

                    {{#each this.hightlightPosts}}
                    <a href="/read/{{ID}}" class="w-100 d-flex mt-2 news-right-sidebar" style="border-radius: 10px">
                        <div class="w-75 d-inline-block p-3" style="font-size: medium;">{{Title}}</div>
                        
                        <img src="/public/image/posts/{{ID}}/smallavt.jpg" class="d-inline-block w-25 p-1"
                            style="border-radius: 10px;" alt="">
                    </a>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</main>