
{{#section 'title'}}
    <title>Write Post</title>
{{/section}}

{{#section 'css'}}
<script src="https://cdn.tiny.cloud/1/kfdqtmxvbc3j9y04vha77cyl4gs5br7u6q906lof2auidfz3/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
<script>
      tinymce.init({
        selector: '#txtContent',
        plugins: 'a11ychecker advcode casechange formatpainter linkchecker autolink lists checklist media mediaembed pageembed permanentpen powerpaste table advtable tinycomments tinymcespellchecker',
        toolbar: 'a11ycheck addcomment showcomments casechange checklist code formatpainter pageembed permanentpen table',
        toolbar_mode: 'floating',
        tinycomments_mode: 'embedded',
        tinycomments_author: 'Author name',
      });
</script>
{{/section}}

{{#section 'js'}}

{{/section}}

<h4 class="">Write New Posts</h4>
<form method="post">
            <div class="form-group">
              <label for="selectedCat">Select Category</label>
              <select class="form-control" id="selectedCat" name="category">
                {{#each this.list_cat}}
                  <option value="{{ID}}">{{Name}}</option>
                {{/each}}
              </select>
            </div>
            <div class="form-group">
              <label for="txtTitle">Title</label>
              <input type="text" name="title" id="txtTitle" class="form-control" placeholder="Write post's Title here" size="1.5em" value="{{this.title}}">
            </div>
            <div class="form-group">
              <label for="txtAbstract">Abstract</label>
              <textarea type="text" name="abstract" id="txtAbstract" class="form-control" placeholder="Write post's Abstract here" value="{{this.abstract}}"></textarea>
            </div>
            <div class="form-group">
              <label for="txtContent">Content</label>
              <textarea rows="15" type="text" name="content" id="txtContent" class="form-control" placeholder="Write post's Content here" value="{{this.content}}"></textarea>
            </div>
            <button type="submit" class="btn btn-success">
                <i class="fa fa-check" aria-hidden="true"></i>
                Save
            </button>
        </form>