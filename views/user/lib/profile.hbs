                        <label for="txtNickname">Bút danh</label>
                        <input class="form-control mb-2" type="text" name="nickname" id="txtNickname" placeholder="Bút danh"
                  value="{{session.user.nickname}}"/>
                    </div>
                    {{/if}}

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="txtEmail">Email</label>
