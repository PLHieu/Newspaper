                                <input class="form-control mb-2" type="text" name="birthday" id="txtDOB"
                                    value="{{session.user.birthday}}" />
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="txtAddress">Địa chỉ</label>
                        <input class="form-control mb-2" type="text" name="address" id="txtAddress"
                            placeholder="Address" value="{{session.user.address}}" />
                    </div>

                    <div class="form-group form-button ">
                        <button type="submit" name="signup" id="signup" class="btn form-submit">Lưu thay đổi</button>
                    </div>
                </form>
            </div>
            <br>
            <div class="wrap-column">
                <h2>Thay đổi mật khẩu</h2>
                <form {{#if session.user.admin}} action="/admin/password?_method=PUT" {{/if}} {{#if
                    session.user.writer}} action="/writer/password?_method=PUT" {{/if}} {{#if session.user.subcriber}}
                    action="/subcriber/password?_method=PUT" {{/if}} {{#if session.user.editor}}
                    action="/editor/password?_method=PUT" {{/if}} method="POST" id="formChangePass">
                    {{#if err_message}}
