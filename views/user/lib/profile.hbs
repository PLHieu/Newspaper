    <div class="row chinhsuathongtin">
        <div class="col-md-8">
            <div class="wrap-column">
                <h2>Chỉnh sửa thông tin cơ bản</h2>
                <form {{#if session.user.admin}} action="/admin/profile?_method=PUT" {{/if}} {{#if session.user.writer}}
