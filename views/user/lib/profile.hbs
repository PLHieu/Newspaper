<div class="container">
    <br>
    <div class="row chinhsuathongtin">
        <div class="col-md-8">
            <div class="wrap-column">
                <h2>Chỉnh sửa thông tin cơ bản</h2>
                <form 
                
                {{#if session.user.admin}}
                action="/admin/profile?_method=PUT" 
                {{/if}}

                {{#if session.user.writer}}
                action="/writer/profile?_method=PUT" 
                {{/if}}

                {{#if session.user.subcriber}}
                action="/subcriber/profile?_method=PUT" 
                {{/if}}

                {{#if session.user.editor}}
                action="/editor/profile?_method=PUT" 
                {{/if}}

                method="POST" id="formGeneralInfor">

                    <div class="form-group">
                        <label for="txtName">Họ và tên</label>
                        <input class="form-control mb-2" type="text" name="name" id="txtName" placeholder="Họ tên"
                            value="{{session.user.name}}" />
                    </div>

                    <div class="form-group">
                        <label for="txtEmail">Email</label>
                        <input class="form-control mb-2" type="text" name="email" id="txtEmail" placeholder="Email"
                            value="{{session.user.email}}" />
                    </div>

                    <div class="form-group">
                        <label for="txtAddress">Địa chỉ</label>
                        <input class="form-control mb-2" type="text" name="address" id="txtAddress" placeholder="Address"
                            value="{{session.user.address}}" />
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            {{!-- <div class="form-group">
                                <label for="txtNickname">NickName</label>
                                <input class="form-control mb-2" type="text" name="nickname" id="txtNickname"
                                    placeholder="NickName" value="{{session.user.nickname}}" />
                            </div> --}}
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="txtDOB"><i class="fa fa-birthday-cake">Sinh Nhật</i></label>
                                <input class="form-control mb-2" type="text" name="birthday" id="txtDOB"
                                    value="{{session.user.birthday}}" />
                            </div>
                        </div>
                    </div>

                    <div class="form-group form-button ">
                        <button type="submit" name="signup" id="signup" class="btn form-submit">Lưu thay đổi</button>
                    </div>
                </form>
            </div>
            <br>
            <div class="wrap-column">
                <h2>Thay đổi mật khẩu</h2>
                <form 

                {{#if session.user.admin}}
                action="/admin/password?_method=PUT" 
                {{/if}}

                {{#if session.user.writer}}
                action="/writer/password?_method=PUT" 
                {{/if}}

                {{#if session.user.subcriber}}
                action="/subcriber/password?_method=PUT" 
                {{/if}}

                {{#if session.user.editor}}
                action="/editor/password?_method=PUT" 
                {{/if}}
                
                method="POST" id="formChangePass">
                    {{#if err_message}}
                    <div class="alert alert-warning alert-dismissible fade show" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        {{err_message}}
                    </div>
                    {{/if}}
                    <input class="form-control mb-2" type="password" name="oldPassword"
                        placeholder="Nhập mật khẩu hiện tại" />
                    <input class="form-control mb-2" type="password" name="newPassword" id="txtPassword"
                        placeholder="Nhập mật khẩu mới" />
                    <input class="form-control mb-2" type="password" name="repNewPassword" id="txtConfirm"
                        placeholder="Nhập lại mật khẩu mới" />
                    <div class="form-group form-button">
                        <button type="submit" name="signup" id="signup" class="btn form-submit">Lưu thay đổi</button>
                    </div>
                </form>
            </div>

        </div>

        <div class="col-md-4">
            <div class="wrap-column">
                <h2>Thông tin khác</h2>
            </div>

        </div>
    </div>
    <br>
</div>